<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margemEsquerdaPrincipal"
        android:layout_marginLeft="@dimen/margemEsquerdaPrincipal"
        android:layout_marginTop="@dimen/margemSuperiorPrincipal"
        android:layout_marginEnd="@dimen/margemDireitaPrincipal"
        android:layout_marginRight="@dimen/margemDireitaPrincipal"
        android:text="@string/tipoCarne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margemEsquerdaPrincipal"
        android:layout_marginLeft="@dimen/margemEsquerdaPrincipal"
        android:layout_marginTop="@dimen/distanciaElementos"
        android:layout_marginEnd="@dimen/margemDireitaPrincipal"
        android:layout_marginRight="@dimen/margemDireitaPrincipal"
        android:entries="@array/tipoCarne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextPeso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margemEsquerdaPrincipal"
        android:layout_marginLeft="@dimen/margemEsquerdaPrincipal"
        android:layout_marginTop="@dimen/distanciaElementos"
        android:layout_marginEnd="@dimen/margemDireitaPrincipal"
        android:layout_marginRight="@dimen/margemDireitaPrincipal"
        android:ems="10"
        android:hint="@string/peso"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:autofillHints="" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margemEsquerdaPrincipal"
        android:layout_marginLeft="@dimen/margemEsquerdaPrincipal"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/margemDireitaPrincipal"
        android:layout_marginRight="@dimen/margemDireitaPrincipal"
        android:onClick="clickBtnCalcular"
        android:text="@string/labelBotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPeso" />
</androidx.constraintlayout.widget.ConstraintLayout>